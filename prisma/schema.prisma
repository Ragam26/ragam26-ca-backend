generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  CA
}

enum UploadStatus {
  pending
  approved
  rejected
}

enum Category {
  poster
  whatsapp
  instagram
}

model User {
  userId              Int       @id @default(autoincrement()) @map("user_id")
  email               String    @unique
  phoneNo             String?   @unique @map("phone_no")
  name                String?
  collegeName         String?   @map("college_name")
  yearOfStudy         Int?      @map("year_of_study") 
  district            String?   
  referralCode        String?   @unique @map("referral_code")
  gPayNumber          String?   @map("gpay_number")
  role                Role      @default(CA)
  isProfileComplete   Boolean   @default(false) @map("is_profile_complete")
  points              Int       @default(0)
  storageUsage        Int       @default(0) @map("storage_usage") // in bytes
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  sessions            Session[]
  uploads             Upload[]

  @@map("users")
}

model Session {
  sessionId     Int      @id @default(autoincrement()) @map("session_id")
  userId        Int      @map("user_id")
  refreshToken  String   @unique @map("refresh_token")
  createdAt     DateTime @default(now()) @map("created_at")
  expiresAt     DateTime @map("expires_at")

  // Relation setup: If a user is deleted, their sessions are wiped automatically
  user          User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("sessions")
}

model Upload {
  uploadId   Int          @id @default(autoincrement()) @map("upload_id")
  userId     Int          @map("user_id")
  filePath   String?       @map("file_path")
  category   String
  status     UploadStatus @default(pending)
  fileSize   Int          @map("file_size") // helps in subtracting if deleted
  createdAt  DateTime     @default(now()) @map("created_at")

  user       User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("uploads")
}